# Smart Mirror Configuration

# Display Settings
DISPLAY_WIDTH=120
DISPLAY_HEIGHT=30
REFRESH_RATE=1

# Weather API (example using Open-Meteo which is free)
WEATHER_LATITUDE=52.5200
WEATHER_LONGITUDE=13.4050
WEATHER_UPDATE_INTERVAL=300

# User Configuration
DEFAULT_USER_NAME=Mirror User

# Plugin Settings
ENABLE_CLOCK=true
ENABLE_WEATHER=true
ENABLE_GREETER=false
ENABLE_TRANSPORT=true
ENABLE_CALENDAR=true

# Transport widget settings
TRANSPORT_API_KEY=
TRANSPORT_STATION_ID=

# Calendar widget settings
# Get your Google Calendar iCal URL from:
# Google Calendar > Settings > [Your Calendar] > Integrate calendar > Secret address in iCal format
CALENDAR_ICAL_URL=
CALENDAR_MAX_EVENTS=3

# Procesing server location (to be used for heavy computations)
PROCESSING_SERVER_LOCATION=